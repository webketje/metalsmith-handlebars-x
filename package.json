{
  "name": "metalsmith-handlebars-x",
  "version": "0.4.0",
  "description": "The best plugin for metalsmith + Handlebars. Global/local partials, in-place & layout compilation, and maximum flexibility.",
  "homepage": "https://github.com/webketje/metalsmith-handlebars-x#README.md",
  "bugs": "https://github.com/webketje/metalsmith-handlebars-x/issues",
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/webketje/metalsmith-handlebars-x.git"
  },
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "handlebars",
    "partials",
    "helpers"
  ],
  "author": "Kevin Van Lierde (https://webketje.com)",
  "engines": {
    "node": ">=12"
  },
  "main": "lib/index.js",
  "scripts": {
    "test": "nyc mocha ./tests",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info"
  },
  "directories": {
    "test": "./tests",
    "lib": "./lib"
  },
  "files": [
    "/lib/index.js",
    "/lib/helpers.js"
  ],
  "dependencies": {
    "handlebars": "^4.7.7"
  },
  "devDependencies": {
    "@metalsmith/layouts": "^2.6.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "handlebars-layouts": "^3.1.4",
    "jstransformer-handlebars": "^1.2.0",
    "metalsmith": "^2.5.1",
    "metalsmith-discover-partials": "^0.1.2",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  }
}
