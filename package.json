{
  "name": "metalsmith-handlebars-x",
  "version": "0.2.3",
  "description": "The best plugin for metalsmith + Handlebars. Global/local partials, in-place & layout compilation, and maximum flexibility.",
  "homepage": "https://github.com/webketje/metalsmith-handlebars-x#README.md",
  "bugs": "https://github.com/webketje/metalsmith-handlebars-x/issues",
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/webketje/metalsmith-handlebars-x.git"
  },
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "handlebars",
    "partials",
    "helpers"
  ],
  "author": "Kevin Van Lierde (https://webketje.com)",
  "engines": {
    "node": ">=10"
  },
  "main": "lib/index.js",
  "scripts": {
    "test": "nyc ospec",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it",
    "coveralls": "nyc report --reporter=text-lcov > ./coverage.info && cat ./coverage.info | node_modules/coveralls/bin/coveralls.js"
  },
  "directories": {
    "test": "./tests",
    "lib": "./lib"
  },
  "files": [
    "/lib/index.js",
    "/lib/helpers.js"
  ],
  "dependencies": {
    "debug": "^4.3.3",
    "handlebars": "^4.7.7"
  },
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "handlebars-layouts": "^3.1.4",
    "jstransformer-handlebars": "^1.2.0",
    "metalsmith": "^2.4.1",
    "metalsmith-discover-partials": "^0.1.2",
    "metalsmith-layouts": "^2.3.1",
    "nyc": "^15.1.0",
    "ospec": "^4.1.1",
    "prettier": "^2.5.1",
    "release-it": "^14.12.4"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1"
  }
}
